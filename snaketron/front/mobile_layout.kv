<ColoredLabel>:
    canvas.before:
        Color:
            rgba: self.box_color
        Rectangle:
            pos: self.pos
            size: self.size


<PlayerSwipeControl>:
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size

        Color:
            rgba: self.border_color
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 6

    on_size: self.update_direction_display()
    on_pos: self.update_direction_display()


<SnakeTronWindow>:
    id: game_window
    orientation: "vertical"

    canvas.before:
        Color:
            rgba: self.app_background_color
        Rectangle:
            pos: self.pos
            size: self.size

    SwipeControlZone:
        orientation: "horizontal"
        size_hint_y: 0.2
        spacing: 5

    ScoreBoard:
        id: score_board
        orientation: "horizontal"
        size_hint_y: 0.05
        spacing: 5

    WorldDisplay:
        id: world_display
        on_pos: self.recompute_square_size()
        on_size: self.recompute_square_size()
        size_hint_y: 0.5

    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 0.05
        spacing: 5

        Button:
            text: "Pause"
            on_press: game_window.toggle_pause()

        Button:
            text: "Explain AIs"
            on_press: game_window.toggle_ai_explanations()

        # Button:
        #     text: "Full speed"
        #     on_press: game_window.toggle_fullspeed()

    SwipeControlZone:
        orientation: "horizontal"
        size_hint_y: 0.2
        spacing: 5
